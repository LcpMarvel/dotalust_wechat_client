.group-ranking {
  width: 100%;
  height: 100%;
}

.group-ranking .logo {
  width: 100vw; 
  height: 53vw;
  display: block;
}

.group-ranking .container {
  width: 100%; 
  height: calc(100vh - 53vw);
  background: linear-gradient(to right, #7A1E18, #A83A1B);
}

.group-ranking .container .ranking {
  border-radius: 10rpx;
  width: calc(100% - 40rpx);
  margin: 0 auto;
  background-color: #EFEFF4;
  position: relative;
}

.group-ranking .page-title {
  display: block;
  width: 100%;
  padding:30rpx 0;
  text-align:center;
  font-size:40rpx;
  line-height:56rpx;
  border-bottom: 1px dashed #B2B2B2;
  font-weight: bold;
}

.group-ranking__items {
  height: calc(100% - 306rpx);
}

.group-ranking__account-item {
  display: flex;
  padding: 20rpx 0;
  padding-right: 15rpx;
  align-content: space-between;
  align-items: center;
  border-bottom: solid #E5E5E5 1rpx;
}

.group-ranking__account-item .rank {
  width: 20.5%;
  font-size: 56rpx;
  font-style: italic;
  text-align: center;
}

.group-ranking__account-item .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
}

.group-ranking__account-item .info {
  width: calc(79.5% - 100rpx);
  padding-left: 20rpx;
  display: flex;
  justify-content: space-between;
}

.group-ranking__account-item .account-digest {
  display: flex;
  align-content: space-between;
  flex-direction: column;
  overflow: hidden;
}

.group-ranking__account-item .account-digest .name {
  font-size: 28rpx;
  line-height: 50rpx;
  height: 50rpx;

  overflow: hidden;
}

.group-ranking__account-item .account-digest .kda {
  font-size: 22rpx;
  color: #888888;
}

.group-ranking__account-item .index-data {
  color: #BE3A31;
  margin-left: 8rpx;
}

.group-ranking__account-item .index-data .value {
  font-size: 60rpx;
  font-style: italic;
  padding-right: 10rpx;
}

.group-ranking__account-item .index-data .unit {
  font-size: 22rpx;
}

.group-ranking .more-view {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 97rpx;
  border-bottom: 1px dashed #B2B2B2;
}

.group-ranking .share-view {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 190rpx;
}

.group-ranking .share {
  background-color: #C63939;
  color: #FFFFFF;
  width: 76%;
}