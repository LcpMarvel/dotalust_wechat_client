.person {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.person .logo {
  width: 100vw; 
  height: 53vw;
  display: block;
}

.person .container {
  width: 100%; 
  height: calc(100vh - 53vw);
  background: linear-gradient(to right, #7A1E18, #A83A1B);
}

.person__info {
  margin: 0 auto;
  text-align: center;
  color: #FFFFFF;
  width: 100%;
  font-weight: normal;
  position:relative;
  top: 40rpx;
}

.person__summary {
  width: 95%;
  height: 100%;
  margin: 0 auto;
  border-radius: 10rpx;
  background-color: #EFEFF4;
  position: relative;
  top: -20rpx;
}

.person__summary__avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 100%;
  display: block;
  margin: 0 auto;
  position: relative;
  top: 20rpx;
}

.person__summary__title {
  font-size: 40rpx;
  display: block;
  padding: 30rpx 0 20rpx 0;
  text-align: center;
  font-weight: bold;
}

.person__summary__container {
  padding: 0 20rpx 30rpx 20rpx;
}

.person__summary__container .item {
  text-align: center;
}

.person__summary__container .item .title {
  display: block;
  margin-top: 10rpx;
  color: #888888;
  font-size: 26rpx;
}

.person__summary__container .item .value {
  display: block;
  font-size: 34rpx;
}

.person__summary__container .winning-percentage-and-kda {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
}

.person__summary__container .winning-percentage-and-kda .item {
  width: 50%;
}

.person__summary__container .winning-percentage {
  border-right: 0.5rpx solid #979797;
}

.person__summary__container .kda {
  border-left: 0.5rpx solid #979797;
}

.person__summary__container .others {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 30rpx;
}

.person__summary__container .others .item {
  width: 25%;
  height: 120rpx;
}

button.share-personal-summary {
  background-color: #C63939;
  color: #FFFFFF;
  width: 76%;
}

.person__summary .switch-steam-account {
  text-align: center;
  display: block;
  font-size: 26rpx;
  color: #576B95;
  margin-top: 16rpx;
}
