.person {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.person__info {
  margin: 0 auto;
  text-align: center;
  color: #FFFFFF;
  width: 100%;
  font-weight: normal;
  position:relative;
  top: 40rpx;
}

.person__info__avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 100%;
  display: block;
  margin: 0 auto;
}

.person__info__name {
  display: block;
  margin: 20rpx 0 10rpx 0;
  font-weight: bold;
  line-height: 50rpx;
  font-size: 36rpx;
}

.person__info__id {
  display: block;
  margin: 5px 0;
  font-size: 28rpx;
}

.person__info__id > .title {
  margin-right: 5rpx;
}

.person__summary {
  width: 95%;
  height: 100%;
  margin: 40rpx auto 20rpx auto;
  border-radius: 10rpx;
  background-color: #EFEFF4;
}

.person__summary__title {
  font-size: 40rpx;
  display: block;
  padding: 60rpx 0;
  text-align: center;
  font-weight: bold;
  border-bottom: 1px dashed #B2B2B2;
}

.person__summary__container {
  padding: 0 20rpx 80rpx 20rpx;
}

.person__summary__container .item {
  text-align: center;
}

.person__summary__container .item .title {
  display: block;
  margin-top: 10rpx;
  color: #888888;
  font-size: 26rpx;
}

.person__summary__container .item .value {
  display: block;
  font-size: 34rpx;
}

.person__summary__container .winning-percentage-and-kda {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 180rpx;
}

.person__summary__container .winning-percentage-and-kda .item {
  width: 50%;
}

.person__summary__container .winning-percentage {
  border-right: 0.5rpx solid #979797;
}

.person__summary__container .kda {
  border-left: 0.5rpx solid #979797;
}

.person__summary__container .others {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 30rpx;
}

.person__summary__container .others .item {
  width: 25%;
  height: 120rpx;
}

button.share-personal-summary {
  background-color: #C63939;
  color: #FFFFFF;
  width: 76%;
}

.person__summary .switch-steam-account {
  text-align: center;
  display: block;
  font-size: 26rpx;
  color: #576B95;
  margin-top: 30rpx;
}
