.register-page {
  width: 100%;
  height: 100%;
}

.register-page .logo {
   width: 100vw; 
   height: 76vw;
   display: block;
}

.register-section {
  width: 100%;
  height: calc(100vh - 76vw);
  background: linear-gradient(to bottom, #080808, #501B04);
}

.register-section form {
  width: 76%;
  display: block;
  position: fixed;
  top: 50%;
  left: 0;
  right: 0;
  margin: 0 auto;
}

.register-from__account-id {
  height: 95rpx;
  font-size: 36rpx;
  background-color: rgba(239, 239, 244, 1);
  border-radius: 10rpx;
  margin: 0 auto;
  margin-bottom: 40rpx;
  text-align: center;
}

.register-from__submit-button {
  height: 95rpx;
  margin: 0 auto;
  background-color: #C63939;
  color: #FFFFFF;
}
